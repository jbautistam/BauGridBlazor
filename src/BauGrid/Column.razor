<th @onclick=@(async _ => await UpdateSortModeAsync()) style=@(Sortable ? "cursor:pointer" : "")>
	<div class="d-flex justify-content-between">
		<div>
			@(Label ?? Field) @SortIndicator
		</div>

		@if (Filterable)
		{
			<div class="dropdown ml-2">
				<a style="cursor:pointer" @onclick=@(_ => ShowFilter = !ShowFilter)><span class="fas fa-xs fa-fw fa-filter" style="cursor:pointer"></span></a>
				<div class="dropdown-menu @(ShowFilter ? "show" : "")">
					<form>
						<div class="dropdown-item" @onclick=All>
							<div class="form-check">
								<input class="form-check-input" type="checkbox" checked=@_all>
								<label class="form-check-label">Select All</label>
							</div>
						</div>
						<div class="dropdown-divider"></div>
						@if (_filters != null)
						{
							@foreach (var filter in _filters)
							{
								<div class="dropdown-item" @onclick=@(_ => Filter(filter.Key))>
									<div class="form-check">
										<input class="form-check-input" type="checkbox" checked=@filter.Value>
										<label class="form-check-label">@filter.Key</label>
									</div>
								</div>
							}
						}
					</form>
				</div>
			</div>
		}
	</div>
</th>
